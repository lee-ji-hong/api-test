#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

message="$(cat $1)"
requiredPattern="^(Feat|Fix|Refactor|Chore|Design|Hotfix):.*$"
if ! [[ $message =~ $requiredPattern ]];
then
  echo "=========================================================================="
  echo "======================   ðŸš¨ WRONG COMMIT MESSAGE!   ======================"
  echo "=========================================================================="
  echo "== Allowed Headers: Feat, Fix, Refactor, Chore, Design, Hotfix ë§Œ ì‚¬ìš©ê°€ëŠ¥í•©ë‹ˆë‹¤     =="
  echo "== EXAMPLE => Feat: ì»¤ë°‹ ì˜ˆì œìž…ë‹ˆë‹¤                                          =="
  echo "=========================================================================="
  echo "== Your commit message was =>" $message 
  echo "=========================================================================="
  exit 1
else
  echo "=========================================================================="
  echo "=======================      COMMIT CREATED!!      ======================="
  echo "=========================================================================="
fi
